<!DOCTYPE html>
<html>

<head>
    <title>Cards</title>
</head>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400&display=swap" rel="stylesheet">
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', Arial, sans-serif;
            background-color: #E6E6FA; /* Lavender background color */
        }

        .main {
            display: flex;
            flex-wrap: wrap;
            justify-content: center; /* Center the row of cards */
            padding: 20px;
        }

        .card {
            width: calc(33.33% - 20px); /* Each card takes up one-third of the available width with margin */
            display: flex;
            flex-direction: column;
            border-radius: 10px; /* Rounded corners */
            margin: 10px; /* Adjust the margin to create spacing between cards */
            background-color: white; /* Card background color */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Box shadow for a subtle depth effect */
        }

        .image {
            width: 100%;
            height: 200px;
            overflow: hidden;
            border-top-left-radius: 10px; /* Rounded corners for top-left and top-right */
            border-top-right-radius: 10px;
        }

        .image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .title {
            text-align: center;
            padding: 10px;
        }

        h1 {
            font-size: 24px; /* Larger font size for a more professional look */
        }

        .des {
            padding: 10px;
            text-align: center;
            flex-grow: 1;
        }

        p {
            font-size: 16px; /* Font size for description */
        }

        button {
            margin-top: 20px;
            margin-bottom: 10px;
            background-color: white;
            border: 1px solid black;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
            text-transform: uppercase;
        }

        button:hover {
            background-color: black;
            color: white;
            transition: 0.5s;
            cursor: pointer;
        }
    </style>

<body>
    <div class="main">
        <% if (monData) { %>
            <% monData.forEach(monItem=> { %>

                <div class="card">

                    <div class="image">
                        <img src="<%= monItem.image %>" alt="<%= monItem.name %>" />
                    </div>
                    <div class="title">
                        <h1>
                            <%= monItem.name %>
                        </h1>
                    </div>
                    <div class="des">
                        <p>
                            <%= monItem.description %>
                        </p>
                    </div>
                </div>
                <% }) %>
                    <% } %>
    </div>
</body>

</html>